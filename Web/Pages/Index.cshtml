@page
@model IndexModel
@{
    ViewData["Title"] = "Купити лабу";
}
<form method="post">
    <div asp-validation-summary="All"></div>
    <div class="form-group">
        <label asp-for = "ClientRequest.TelegramUsername">Нік в тг</label>
        <input asp-for="ClientRequest.TelegramUsername"  type="text" class="form-control" placeholder="@@username">
    </div>
    <div class="form-group">
        <label asp-for="ClientRequest.Requirement">Що саме потрібно</label>
        <input asp-for="ClientRequest.Requirement" type="text" class="form-control">
        <small id="emailHelp" class="form-text text-muted">Курс, назва предмета, номер роботи, тд</small>
    </div>

    <button type="submit" class="btn btn-primary">Відправити</button>
</form>